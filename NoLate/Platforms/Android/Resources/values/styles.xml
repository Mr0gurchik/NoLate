<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="Maui.MainTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:alertDialogTheme">@style/DarkDialogTheme</item>
		<item name="materialAlertDialogTheme">@style/DarkDialogTheme</item>
	</style>

	<style name="DarkDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
		<item name="android:background">#1E1E1E</item>
		<item name="android:colorBackground">#1E1E1E</item>
		<item name="android:textColorPrimary">#FFFFFF</item>
		<item name="android:textColorSecondary">#BBBBBB</item>
		<item name="buttonPanelBackground">#2A2A2A</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
		<item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
	</style>

	<style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
		<item name="android:textColor">#FF5722</item>
	</style>

	<style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
		<item name="android:textColor">#4CAF50</item>
	</style>

</resources>
